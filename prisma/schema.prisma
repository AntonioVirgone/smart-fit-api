generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  customerId    String?
  username      String    @unique
  password      String
  email         String    @unique
  type          String    @default("CONSUMER")
  refreshToken  String?
  codeValidator String?
  status        String    @default("INACTIVE")
  createdAt     DateTime  @default(now())

  customer Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
}

model History {
  id         Int      @id @default(autoincrement())
  customerId String
  jsonData   Json?
  filename   String?
  dataSize   Int      @default(0)
  status     String   @default("pending")
  createdAt  DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model Workout {
  id     String            @id @default(uuid())
  name   String?
  owners CustomerWorkout[]

  workoutPlans WorkoutPlan[]
  Plan         Plan[]
}

model Plan {
  id        String   @id @default(uuid())
  name      String
  workout   Workout? @relation(fields: [workoutId], references: [id], onDelete: SetNull)
  workoutId String?

  workoutPlans  WorkoutPlan[]
  planExercises PlanExercise[]
}

model Exercise {
  id           String   @id @default(uuid())
  name         String
  description  String
  imageName    String
  muscleGroup  String
  sets         Int      @default(0)
  repetitions  Int      @default(0)
  recovery     Int      @default(0)
  instructions String[]

  planExercises PlanExercise[]
  historyWorkouts HistoryWorkout[]
}

model WorkoutPlan {
  id        String  @id @default(uuid())
  workout   Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  workoutId String

  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  planId String

  order     Int? // opzionale: ordine dei plan nel workout
  createdAt DateTime @default(now())

  @@unique([workoutId, planId])
}

model PlanExercise {
  id     String @id @default(uuid())
  plan   Plan   @relation(fields: [planId], references: [id], onDelete: Cascade)
  planId String

  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId String

  order Int?

  createdAt DateTime @default(now())

  @@unique([planId, exerciseId])
}

model HistoryWorkout {
  id          String    @id @default(uuid())
  customerId  String
  exerciseId  String
  repetitions Int
  weight      Decimal   @db.Decimal(5, 2)
  notes       String
  type        String    @default("series")
  intensity   String    @default("light")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@index([exerciseId])
}

model Customer {
  id             String            @id @default(uuid())
  name           String
  email          String?
  phone          String?
  password       String?
  activationCode String?
  status         CustomerStatus    @default(pending)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  workouts       CustomerWorkout[]
  Trainer        Trainer?          @relation(fields: [trainerId], references: [id])
  trainerId      String?
  DeviceToken    DeviceToken[]

  profile        CustomerProfile?
  histories      History[]
  historyWorkouts HistoryWorkout[]
  users          User[]
}

model CustomerProfile {
  id         String   @id @default(uuid())
  customerId String   @unique
  name       String
  lastname   String
  age        Int
  weight     Int
  height     Decimal  @db.Decimal(5, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model CustomerWorkout {
  id         String   @id @default(uuid())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  workout    Workout  @relation(fields: [workoutId], references: [id])
  workoutId  String
}

model Trainer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relazione con Customer (se esiste)
  customers Customer[]
}

model DeviceToken {
  id         String   @id @default(uuid())
  token      String   @unique
  platform   String // "ios" | "android"
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum CustomerStatus {
  pending
  active
  disabled
}

enum WorkoutType {
  heating
  series
}

enum WorkoutIntensity {
  light
  moderate
  intense
}
